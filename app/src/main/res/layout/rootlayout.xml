<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:theme="@style/Normal"
    android:background="@color/colorGlass">

    <ImageView
        android:id="@+id/top_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/subinf"
        android:layout_alignBottom="@id/bottom_border"
        android:clickable="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimaryDarkGlassy"/>
    <TextView
        android:id="@+id/subinf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="gravity"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:textSize="5pt"
        android:text="@string/debug_version"
        android:layout_above="@id/shlock"
        android:background="@color/colorGlass"/>
    <TextClock
        android:id="@+id/shlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:format24Hour="HH:mm"
        android:format12Hour="HH:mm"
        android:clickable="true"
        android:focusable="false"
        android:text="@string/time"
        android:onClick="clockClicked"
        android:layout_marginBottom="10dp"
        android:textSize="100sp"
        android:textStyle="bold"
        android:layout_above="@id/mid"
        android:background="@color/colorGlass"/>
    <ImageView
        android:id="@+id/top_border"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginEnd="120dp"
        android:layout_marginStart="120dp"
        android:background="@color/colorAccent"
        android:layout_above="@id/shdate"/>
    <TextClock
        android:id="@+id/shdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:format24Hour="dd MMM yyyy"
        android:format12Hour="dd MMM yyyy"
        android:clickable="true"
        android:focusable="false"
        android:text="@string/date"
        android:onClick="calClicked"
        android:textColor="@color/colorText"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_above="@id/mid"
        android:background="@color/colorGlass"/>
    <ImageView
        android:id="@+id/bottom_border"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/shlock"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@color/colorAccent"/>
    <ImageView
        android:id="@+id/mid"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@color/colorGlass"
        android:layout_above="@id/shSTDIN" />
    <TextView
        android:id="@+id/op"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="bottom"
        android:text="@string/command_hist"
        android:background="@color/colorPrimaryDarkGlassy"
        android:textSize="8pt"
        android:layout_above="@id/shSTDIN" />
    <ImageView
        android:id="@+id/bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/shSTDIN"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorPrimaryDarkGlassy"/>
    <cbosoft.shaun.InputBuffer
        android:id="@+id/shSTDIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorText"
        android:textSize="8pt"
        android:backgroundTint="@color/colorGlass"/>

</RelativeLayout>